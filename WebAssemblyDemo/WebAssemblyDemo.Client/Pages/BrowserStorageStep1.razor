@page "/browserstoragestep1"
@rendermode InteractiveWebAssembly
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject ContainerStorage ContainerStorage


<h3>Browser Storage Step 1</h3>
<br />
<br />

<input type="text" class="form-control" @bind-value="data" />
<br />
<br />

<button type="submit" class="btn btn-success" @onclick="GoNext"> Next </button>

@code {
    private string data="";

    private void GoNext()
    {
        //await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "sample-data", data);
        ContainerStorage.SetMessage(data);
        NavigationManager.NavigateTo("/browserstoragestep2");
    }
}
